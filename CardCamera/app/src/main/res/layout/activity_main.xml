<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:lines="1"
        android:text="身份证拍摄器"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:layout_width="@dimen/dp_320"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="@dimen/dp_205"
        android:src="@mipmap/front"
        android:scaleType="fitXY"
        android:id="@+id/iv_one"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_40"
        android:orientation="horizontal">
        <com.ruffian.library.RTextView
            android:id="@+id/btn_select_front"
            android:layout_width="@dimen/dp_140"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dp_40"
            app:background_unable="@color/color_main"
            app:background_normal="@color/color_main"
            app:background_pressed="@color/color_main_press"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            app:corner_radius="@dimen/dp_5"
            android:text="拍摄正面照"/>
        <com.ruffian.library.RTextView
            android:id="@+id/btn_save_front"
            android:layout_width="@dimen/dp_140"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/dp_40"
            app:background_unable="@color/color_main"
            app:background_normal="@color/color_main"
            app:background_pressed="@color/color_main_press"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            app:corner_radius="@dimen/dp_5"
            android:text="保存正面照"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="@dimen/dp_320"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="@dimen/dp_205"
        android:src="@mipmap/back"
        android:scaleType="fitXY"
        android:id="@+id/iv_two"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_80"
        android:orientation="horizontal">
        <com.ruffian.library.RTextView
            android:id="@+id/btn_select_back"
            android:layout_width="@dimen/dp_140"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dp_40"
            app:background_unable="@color/color_main"
            app:background_normal="@color/color_main"
            app:background_pressed="@color/color_main_press"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            app:corner_radius="@dimen/dp_5"
            android:text="拍摄背面照"/>
        <com.ruffian.library.RTextView
            android:id="@+id/btn_back_save"
            android:layout_width="@dimen/dp_140"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/dp_40"
            app:background_unable="@color/color_main"
            app:background_normal="@color/color_main"
            app:background_pressed="@color/color_main_press"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            app:corner_radius="@dimen/dp_5"
            android:text="保存背面照"/>
    </RelativeLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>