<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_280"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/usefuldialog_loading_bg"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginBottom="@dimen/dp_17"
        android:paddingLeft="@dimen/dp_15"
        android:gravity="center"
        android:paddingRight="@dimen/dp_15"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_18"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/tv_diloag_title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_23"
        android:paddingLeft="@dimen/dp_15"
        android:gravity="center"
        android:paddingRight="@dimen/dp_15"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black"
        android:id="@+id/tv_diloag_message"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/dp_90"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/dp_5"
            app:cardElevation="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_height="@dimen/dp_38">
            <Button
                android:id="@+id/btn_dialog_cancle"
                android:layout_width="match_parent"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:background="@color/white"
                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/dp_90"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/color_main"
            app:cardCornerRadius="@dimen/dp_5"
            app:cardElevation="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_20"
            android:id="@+id/card_popwindow"
            android:layout_height="@dimen/dp_38">
            <Button
                android:id="@+id/btn_dialog_sure"
                android:layout_width="match_parent"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:background="@color/color_main"
                />
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>
